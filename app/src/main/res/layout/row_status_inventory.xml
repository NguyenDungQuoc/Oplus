<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgItemInventory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        android:scaleType="centerCrop"
        android:padding="1dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".25"
        app:strokeColor="@color/colorGreen"
        app:strokeWidth="1dp">


    </com.google.android.material.imageview.ShapeableImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameItemInventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgItemInventory"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cânasdsafadadhasdashdhasdhasdajsdjasjassasasasas" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSoLuongTon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/imgItemInventory"
        app:layout_constraintTop_toBottomOf="@+id/tvNameItemInventory"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        tools:text="Số lượng tồn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=":"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNameItemInventory" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumSoLuongTon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@+id/tvNameItemInventory"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLoaiThietBi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/imgItemInventory"
        app:layout_constraintTop_toBottomOf="@+id/tvNumSoLuongTon"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        tools:text="Loại thiết bị" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=":"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNumSoLuongTon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumLoaiThietBi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/tvNumSoLuongTon"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/imgItemInventory"
        app:layout_constraintTop_toBottomOf="@+id/tvNumLoaiThietBi"
      app:layout_constraintEnd_toStartOf="@id/guideline"
        tools:text="Mã" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=":"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNumLoaiThietBi" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMaThietBi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/tvNumLoaiThietBi"
        tools:text="1" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgItemInventory" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />
</androidx.constraintlayout.widget.ConstraintLayout>