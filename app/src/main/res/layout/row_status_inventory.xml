<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

 <com.google.android.material.card.MaterialCardView
     android:id="@+id/cvImg"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:strokeColor="@color/colorGreen"
     app:strokeWidth="1dp"
     android:layout_marginTop="12dp"
     app:layout_constraintDimensionRatio="1:1"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:cardCornerRadius="4dp"
     app:layout_constraintWidth_percent=".25">
     <ImageView
         android:id="@+id/imgItemInventory"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scaleType="centerCrop"
         android:contentDescription="Image" />
 </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameItemInventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Cânasdsafadadhasdashdhasdhasdajsdjasjassasasasas"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/cvImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSoLuongTon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".24"
        tools:text="Số lượng tồn"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/cvImg"
        app:layout_constraintTop_toBottomOf="@+id/tvNameItemInventory" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=":"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNameItemInventory" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumSoLuongTon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNameItemInventory"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLoaiThietBi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        tools:text="Loại thiết bị"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/cvImg"
        app:layout_constraintTop_toBottomOf="@+id/tvNumSoLuongTon"
        app:layout_constraintWidth_percent=".24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=":"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNumSoLuongTon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumLoaiThietBi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNumSoLuongTon"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Mã"
        android:layout_marginTop="4dp"
        app:layout_constraintWidth_percent=".24"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/cvImg"
        app:layout_constraintTop_toBottomOf="@+id/tvNumLoaiThietBi"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=":"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNumLoaiThietBi" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMaThietBi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSoLuongTon"
        app:layout_constraintTop_toBottomOf="@+id/tvNumLoaiThietBi"
        tools:text="1" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_50"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cvImg"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>